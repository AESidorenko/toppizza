<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="row w-100">
            <div class="col-8">
                <p class="logo h3 text-primary">ToPPizza</p>
            </div>
            <div class="col-2" id="currency-container">
            </div>
            <div class="col-2 text-right">
                {% if app.user %}
                    <div><small>User: {{ app.user.username }}</small></div>
                    <a href="/orders"><small>Orders history</small></a><br/>
                    <a href="/logout"><small>Logout</small></a>
                {% else %}
                    <form>
                        <div class="form-row">
                            <div class="col-12">
                                <input type="text" id="username" class="form-control form-control-sm"
                                       placeholder="Username"/>
                            </div>
                            <div class="col-12">
                                <input type="password" id="password" class="form-control form-control-sm"
                                       placeholder="Password"/>
                            </div>
                            <div class="col-12">
                                <button onClick="loginUser()" type="button" class="btn btn-success btn-sm float-right">
                                    Login
                                </button>
                            </div>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script>

        const loginUser = function() {
            const data = {
                username: document.getElementById('username').value,
                password: document.getElementById('password').value,
            };

            fetch('/login', {
                method:   'POST',
                headers:  {
                    'Content-Type': 'application/json',
                },
                redirect: 'follow',
                body:     JSON.stringify(data),
            }).finally(() => {
                window.location.reload();
            });
        };
    </script>
{% endblock %}
</body>
</html>
