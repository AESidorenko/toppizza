{% extends 'base.html.twig' %}

{% block title %}Hello ApplicationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        Cookies: {{ dump(cookies) }}
        Cart: {{ dump(cart) }}
        Cart hash: {{ dump(cartHash) }}
        Session: {{ dump(session) }}

        <div class="row">
            <div class="col-12 text-right text-danger p-2" id="mini-cart"></div>
        </div>

        <div id="menu"></div>
    </div>
{% endblock %}
